<Page x:Class="App_For_Accounting_Products_In_Fridge.StartingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:App_For_Accounting_Products_In_Fridge"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="StartingPage">
   



    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="ProductsForPurchaseButton"  Content="Создать список покупок" Click="ProductsForPurchaseButton_Click" Grid.Row="0" FontSize="18" FontWeight="Bold" FontFamily="Elephant" Grid.ColumnSpan="2" Margin="225,0,0,0">
            <Button.Background>
                <ImageBrush ImageSource="Resources/button1.jpg"/>
            </Button.Background>

            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="AvailableProductsButton"   Content="Имеющиеся в&#xD;&#xA; холодильнике продукты"   Click="AvailableProductsButton_Click" Grid.Column="2" Grid.Row="1" FontSize="16" FontWeight="Bold">
            <Button.Background>
                <ImageBrush ImageSource="Resources/button2.jpg"/>
            </Button.Background>
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
          
        </Button>
        <Button x:Name="necessaryFoodButton" Content="Необходимые продукты"  Click="necessaryFoodButton_Click" Grid.Column="1" Grid.Row="2" FontSize="16" FontWeight="Bold">
            <Button.Background>
                <ImageBrush ImageSource="Resources/button3.jpg"/>
            </Button.Background>
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
           
        </Button>

    </Grid>
</Page>
