<Page x:Class="App_For_Accounting_Products_In_Fridge.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:App_For_Accounting_Products_In_Fridge"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="LoginPage">


    <Grid>
        <TextBox x:Name="textBoxLogin" Height="25" Margin="10,10,10,0" 
                 TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <PasswordBox x:Name="passwordBox" Margin="10,40,10,0" VerticalAlignment="Top" Height="25"/>
        <Button x:Name="buttonLogin" Content="Login" Margin="10 70 10 0" 
                VerticalAlignment="Top" Width="120" Height="25" HorizontalAlignment="Center" Click="buttonLogin_Click"/>


    </Grid>
</Page>
